# ==================================
# GLAD LABS - PRODUCTION ENVIRONMENT
# ==================================
# For: main branch deployments
# Deploy to: Vercel (frontend) + Railway (backend)
# Database: PostgreSQL (production database)
# 
# IMPORTANT:
# - This file is COMMITTED (no secrets)
# - Actual secrets stored in GitHub Secrets, Railway, Vercel
# - NEVER commit real API keys or credentials here

NODE_ENV=production
LOG_LEVEL=info

# ==================================
# Port Configuration
# ==================================
STRAPI_PORT=1337
PUBLIC_SITE_PORT=3000
OVERSIGHT_HUB_PORT=3001
COFOUNDER_AGENT_PORT=8000
POSTGRES_PORT=5432
REDIS_PORT=6379

# ==================================
# Strapi CMS Configuration - PRODUCTION
# ==================================
# These URLs point to production environment
NEXT_PUBLIC_STRAPI_API_URL=https://cms.railway.app
STRAPI_API_TOKEN=${PROD_STRAPI_TOKEN}
STRAPI_ADMIN_JWT_SECRET=${PROD_STRAPI_ADMIN_JWT_SECRET}
STRAPI_API_TOKEN_SALT=${PROD_STRAPI_API_TOKEN_SALT}
STRAPI_APP_KEYS=${PROD_STRAPI_APP_KEYS}
STRAPI_JWT_SECRET=${PROD_STRAPI_JWT_SECRET}

# Database (PostgreSQL for production)
DATABASE_CLIENT=postgres
DATABASE_URL=postgresql://${PROD_DB_USER}:${PROD_DB_PASSWORD}@${PROD_DB_HOST}:5432/glad_labs_production
DATABASE_HOST=${PROD_DB_HOST}
DATABASE_PORT=5432
DATABASE_NAME=glad_labs_production
DATABASE_USER=${PROD_DB_USER}
DATABASE_PASSWORD=${PROD_DB_PASSWORD}
DATABASE_SSL=true

# Strapi Admin Panel
STRAPI_ADMIN_PASSWORD=${PROD_ADMIN_PASSWORD}
STRAPI_ADMIN_EMAIL=admin@glad-labs.com

# ==================================
# Frontend Configuration - PRODUCTION
# ==================================
NEXT_PUBLIC_API_BASE_URL=https://api.glad-labs.com
NEXT_PUBLIC_COFOUNDER_AGENT_URL=https://agent.glad-labs.com:8000
NEXT_PUBLIC_GA_ID=${PROD_GA_ID}

# ==================================
# AI Agent Configuration - PRODUCTION
# ==================================
ANTHROPIC_API_KEY=${PROD_ANTHROPIC_API_KEY}
OPENAI_API_KEY=${PROD_OPENAI_API_KEY}
GOOGLE_API_KEY=${PROD_GOOGLE_API_KEY}
COFOUNDER_AGENT_MODEL=claude-3-5-sonnet-20241022
COFOUNDER_AGENT_LOG_LEVEL=info
COFOUNDER_AGENT_DEBUG_MODE=false

# ==================================
# GCP Configuration - PRODUCTION
# ==================================
GCP_PROJECT_ID=${PROD_GCP_PROJECT_ID}
GCP_SERVICE_ACCOUNT_EMAIL=${PROD_GCP_SERVICE_ACCOUNT_EMAIL}
GCP_SERVICE_ACCOUNT_KEY=${PROD_GCP_SERVICE_ACCOUNT_KEY}

# ==================================
# Feature Flags - PRODUCTION (Enhanced)
# ==================================
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
ENABLE_DEBUG_LOGS=false
ENABLE_PAYMENT_PROCESSING=true
ENABLE_VOICE_INTERFACE=true
ENABLE_MOCK_DATA=false
ENABLE_MCP_SERVER=true
ENABLE_MEMORY_SYSTEM=true

# ==================================
# Timeouts & Limits - PRODUCTION
# ==================================
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
CACHE_DURATION_MINUTES=60

# ==================================
# Redis Configuration - PRODUCTION
# ==================================
REDIS_HOST=${PROD_REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${PROD_REDIS_PASSWORD}
REDIS_DB=0
REDIS_URL=redis://:${PROD_REDIS_PASSWORD}@${PROD_REDIS_HOST}:6379/0

# ==================================
# Email Configuration - PRODUCTION
# ==================================
SMTP_HOST=${PROD_SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${PROD_SMTP_USER}
SMTP_PASSWORD=${PROD_SMTP_PASSWORD}
SMTP_FROM=noreply@glad-labs.com

# ==================================
# Logging & Monitoring - PRODUCTION
# ==================================
LOG_LEVEL=info
SENTRY_DSN=${PROD_SENTRY_DSN}
ENABLE_REQUEST_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=true

# ==================================
# External Services - PRODUCTION
# ==================================
SERPER_API_KEY=${PROD_SERPER_API_KEY}
NEWSLETTER_API_KEY=${PROD_NEWSLETTER_API_KEY}

# ==================================
# Security - PRODUCTION
# ==================================
SECURE_COOKIES=true
SAME_SITE_COOKIES=strict
ENABLE_RATE_LIMITING=true
ENABLE_IP_WHITELIST=false

# ==================================
# Payment Processing - PRODUCTION
# ==================================
STRIPE_PUBLIC_KEY=${PROD_STRIPE_PUBLIC_KEY}
STRIPE_SECRET_KEY=${PROD_STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${PROD_STRIPE_WEBHOOK_SECRET}

# ==================================
# Testing - PRODUCTION
# ==================================
# Don't use test credentials in production!
TEST_USER_EMAIL=
TEST_USER_PASSWORD=
