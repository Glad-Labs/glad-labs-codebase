# ==================================
# Glad Labs - STAGING ENVIRONMENT
# ==================================
# For: dev branch deployments
# Deploy to: Railway staging environment
# Database: PostgreSQL (staging database)
# 
# IMPORTANT:
# - This file is COMMITTED (no secrets)
# - Actual secrets stored in GitHub Secrets
# - Never commit real API keys here

NODE_ENV=staging
LOG_LEVEL=DEBUG

# ==================================
# Port Configuration
# ==================================
STRAPI_PORT=1337
PUBLIC_SITE_PORT=3000
OVERSIGHT_HUB_PORT=3001
COFOUNDER_AGENT_PORT=8000
POSTGRES_PORT=5432
REDIS_PORT=6379

# ==================================
# Strapi CMS Configuration - STAGING
# ==================================
# These URLs point to the staging environment
NEXT_PUBLIC_STRAPI_API_URL=https://glad-labs-staging-cms.railway.app
STRAPI_API_TOKEN=${STAGING_STRAPI_TOKEN}
STRAPI_ADMIN_JWT_SECRET=${STAGING_STRAPI_ADMIN_JWT_SECRET}
STRAPI_API_TOKEN_SALT=${STAGING_STRAPI_API_TOKEN_SALT}
STRAPI_APP_KEYS=${STAGING_STRAPI_APP_KEYS}
STRAPI_JWT_SECRET=${STAGING_STRAPI_JWT_SECRET}

# Database (PostgreSQL for staging)
DATABASE_CLIENT=postgres
DATABASE_URL=postgresql://${STAGING_DB_USER}:${STAGING_DB_PASSWORD}@${STAGING_DB_HOST}:5432/glad_labs_staging
DATABASE_HOST=${STAGING_DB_HOST}
DATABASE_PORT=5432
DATABASE_NAME=glad_labs_staging
DATABASE_USER=${STAGING_DB_USER}
DATABASE_PASSWORD=${STAGING_DB_PASSWORD}
DATABASE_SSL=false

# Strapi Admin Panel
STRAPI_ADMIN_PASSWORD=${STAGING_ADMIN_PASSWORD}
STRAPI_ADMIN_EMAIL=admin@gladlabs.io

# ==================================
# Frontend Configuration - STAGING
# ==================================
NEXT_PUBLIC_API_BASE_URL=https://glad-labs-staging-api.railway.app
NEXT_PUBLIC_COFOUNDER_AGENT_URL=https://glad-labs-staging-agent.railway.app:8000
NEXT_PUBLIC_GA_ID=${STAGING_GA_ID}

# ==================================
# AI Agent Configuration - STAGING
# ==================================
# Choose ONE provider:
OPENAI_API_KEY=${STAGING_OPENAI_API_KEY}
ANTHROPIC_API_KEY=${STAGING_ANTHROPIC_API_KEY}
GOOGLE_API_KEY=${STAGING_GOOGLE_API_KEY}

COFOUNDER_AGENT_MODEL=gpt-4
COFOUNDER_AGENT_LOG_LEVEL=debug
COFOUNDER_AGENT_DEBUG_MODE=true

# ==================================
# GCP Configuration - STAGING
# ==================================
GCP_PROJECT_ID=${STAGING_GCP_PROJECT_ID}
GCP_SERVICE_ACCOUNT_EMAIL=${STAGING_GCP_SERVICE_ACCOUNT_EMAIL}
GCP_SERVICE_ACCOUNT_KEY=${STAGING_GCP_SERVICE_ACCOUNT_KEY}

# ==================================
# Feature Flags - STAGING
# ==================================
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
ENABLE_DEBUG_LOGS=false
ENABLE_PAYMENT_PROCESSING=false
ENABLE_VOICE_INTERFACE=true
ENABLE_MOCK_DATA=false

# ==================================
# Timeouts & Limits - STAGING
# ==================================
API_TIMEOUT=15000
API_RETRY_ATTEMPTS=2
RATE_LIMIT_REQUESTS_PER_MINUTE=100
CACHE_DURATION_MINUTES=10

# ==================================
# Redis Configuration - STAGING
# ==================================
REDIS_HOST=${STAGING_REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${STAGING_REDIS_PASSWORD}
REDIS_DB=1
REDIS_URL=redis://:${STAGING_REDIS_PASSWORD}@${STAGING_REDIS_HOST}:6379/1

# ==================================
# Email Configuration - STAGING
# ==================================
SMTP_HOST=${STAGING_SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${STAGING_SMTP_USER}
SMTP_PASSWORD=${STAGING_SMTP_PASSWORD}
SMTP_FROM=noreply@staging.glad-labs.com

# ==================================
# Logging & Monitoring - STAGING
# ==================================
LOG_LEVEL=debug
SENTRY_DSN=${STAGING_SENTRY_DSN}
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# ==================================
# External Services - STAGING
# ==================================
SERPER_API_KEY=${STAGING_SERPER_API_KEY}
NEWSLETTER_API_KEY=${STAGING_NEWSLETTER_API_KEY}

# ==================================
# Feature Flags - STAGING (Enhanced)
# ==================================
ENABLE_MCP_SERVER=true
ENABLE_VOICE_INTERFACE=true
ENABLE_MEMORY_SYSTEM=true

# ==================================
# Testing - STAGING
# ==================================
TEST_USER_EMAIL=test@staging.glad-labs.com
TEST_USER_PASSWORD=${STAGING_TEST_PASSWORD}
