# --- Gemini API Configuration ---
GEMINI_API_KEY="YOUR_GEMINI_API_KEY"
GEMINI_MODEL="gemini-1.5-pro-latest"

# --- LLM Provider ---
# Set to "gemini" to use the Gemini API or "local" to use a local LLM
LLM_PROVIDER="gemini"

# --- Local LLM (Ollama) Configuration ---
LOCAL_LLM_API_URL="http://localhost:11434"
LOCAL_LLM_MODEL_NAME="llava:13b"

# --- Google Cloud Platform (GCP) Configuration ---
GCP_SERVICE_ACCOUNT_EMAIL="YOUR_GCP_SERVICE_ACCOUNT_EMAIL"
GCP_PROJECT_ID="YOUR_GCP_PROJECT_ID"
GCP_REGION="YOUR_GCP_REGION"

# --- Strapi CMS Integration ---
STRAPI_API_URL="http://localhost:1337/api"
STRAPI_API_TOKEN="YOUR_STRAPI_API_TOKEN"

# --- Google Cloud Storage (GCS) for Media ---
GCS_BUCKET_NAME="YOUR_GCS_BUCKET_NAME"

# --- Firestore Database for Logging & Metrics ---
FIRESTORE_COLLECTION="agent_runs"

# --- External Services & APIs ---
PEXELS_API_KEY="YOUR_PEXELS_API_KEY"
SERPER_API_KEY="YOUR_SERPER_API_KEY"

# --- Logging Configuration ---
MAX_LOG_SIZE_MB=5
MAX_LOG_BACKUP_COUNT=3

# --- Google Cloud Pub/Sub Configuration ---
PUBSUB_TOPIC="agent-commands"
PUBSUB_SUBSCRIPTION="content-agent-subscription"
