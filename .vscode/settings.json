{
  "python.defaultInterpreterPath": "c:/Users/mattm/glad-labs-website/agents/content-agent/.venv/Scripts/python.exe",
  "python.terminal.activateEnvironment": true,
  "task.autoDetect": "on",
  "task.allowAutomaticTasks": "on",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/build/**": true,
    "**/dist/**": true,
    "**/.strapi/**": true
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "typescript.preferences.autoImportFileExcludePatterns": [
    "next/router.d.ts",
    "next/dist/client/link.d.ts"
  ],
  "terminal.integrated.cwd": "${workspaceFolder}",
  "python.analysis.extraPaths": ["./src", "./src/cofounder_agent"],
  "python.analysis.typeshedPath": "./typings",
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },
  "github.copilot.instructions.file": "${workspaceFolder}/.github/copilot-instructions.md",
  "python.testing.pytestArgs": ["."],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "[powershell]": {
    "editor.defaultFormatter": "ms-vscode.powershell"
  },
  "terminal.integrated.automationProfile.windows": {
    "path": "C:\\Program Files\\Git\\bin\\bash.exe",
    "args": ["--login", "-i"]
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  }
}
