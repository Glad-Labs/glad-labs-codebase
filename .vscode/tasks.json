{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "BE: Start Strapi Backend",
      "type": "shell",
      "command": "cd c:\\Users\\mattm\\glad-labs-website\\cms\\strapi-backend; npm run develop",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "BE: Start Python Agent Listener",
      "type": "shell",
      "command": "cd ${workspaceFolder}/agents/content-agent; ./.venv/Scripts/Activate.ps1; python orchestrator.py",
      "options": {
        "cwd": "${workspaceFolder}/agents/content-agent"
      },
      "presentation": {
        "group": "startup",
        "panel": "new",
        "reveal": "always"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": [
        "$python"
      ]
    },
    {
      "label": "FE: Start Oversight Hub",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/web/oversight-hub"
      },
      "presentation": {
        "group": "startup",
        "panel": "new",
        "reveal": "always"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": [
        "$jshint"
      ]
    },
    {
      "label": "FE: Start Public Site",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/web/public-site"
      },
      "presentation": {
        "group": "startup",
        "panel": "new",
        "reveal": "always"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": [
        "$jshint"
      ]
    }
  ]
}