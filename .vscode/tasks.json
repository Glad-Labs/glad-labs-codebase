{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "BE: Start Python Agent Listener",
      "type": "shell",
      "command": "cd ${workspaceFolder}/agents/content-agent; ./.venv/Scripts/Activate.ps1; python orchestrator.py",
      "presentation": {
        "panel": "new",
        "reveal": "always"
      },
      "isBackground": true,
      "problemMatcher": ["$python"]
    },
    {
      "label": "FE: Start Oversight Hub",
      "type": "shell",
      "command": "npm start --workspace=oversight-hub",
      "presentation": {
        "panel": "new",
        "reveal": "always"
      },
      "isBackground": true,
      "problemMatcher": ["$jshint"]
    },
    {
      "label": "FE: Start Public Site",
      "type": "shell",
      "command": "npm run dev --workspace=glad-labs-public-site",
      "presentation": {
        "panel": "new",
        "reveal": "always"
      },
      "isBackground": true,
      "problemMatcher": ["$jshint"]
    },
    {
      "label": "BE: Start Strapi",
      "type": "shell",
      "command": "npm run develop --workspace=strapi-backend",
      "presentation": {
        "panel": "new",
        "reveal": "always"
      },
      "isBackground": true,
      "problemMatcher": []
    }
  ],
  "compounds": [
    {
      "label": "Start All Services",
      "tasks": [
        "BE: Start Strapi",
        "BE: Start Python Agent Listener",
        "FE: Start Oversight Hub",
        "FE: Start Public Site"
      ],
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
