{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Oversight Hub",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/web/oversight-hub"
      },
      "problemMatcher": [],
      "presentation": {
        "group": "services",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start Public Site",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/web/public-site"
      },
      "problemMatcher": [],
      "presentation": {
        "group": "services",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start Co-founder Agent",
      "type": "shell",
      "command": "python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
      "options": {
        "cwd": "${workspaceFolder}/src/cofounder_agent"
      },
      "problemMatcher": ["$python"],
      "presentation": {
        "group": "services",
        "panel": "dedicated",
        "reveal": "always",
        "clear": false
      },
      "isBackground": false
    },
    {
      "label": "Start All Services",
      "dependsOn": [
        "Start Co-founder Agent",
        "Start Oversight Hub",
        "Start Public Site"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "Live Preview",
      "workspacePath": "c:\\Users\\mattm\\glad-labs-website",
      "problemMatcher": [],
      "label": "Live Preview: Run Server"
    }
  ]
}
