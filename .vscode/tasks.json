{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start All Services",
      "type": "shell",
      "command": "npm",
      "args": ["run", "start:all"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "BE: Start Python Agent Listener",
      "type": "shell",
      "command": "cd ${workspaceFolder}/agents/content-agent; ./.venv/Scripts/Activate.ps1; python orchestrator.py",
      "options": {
        "cwd": "${workspaceFolder}/agents/content-agent"
      },
      "presentation": {
        "group": "startup",
        "panel": "new",
        "reveal": "always"
      },
      "problemMatcher": ["$python"]
    },
    {
      "label": "FE: Start Oversight Hub",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/web/oversight-hub"
      },
      "presentation": {
        "group": "startup",
        "panel": "new",
        "reveal": "always"
      },
      "problemMatcher": ["$jshint"]
    },
    {
      "label": "FE: Start Public Site",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/web/public-site"
      },
      "presentation": {
        "group": "startup",
        "panel": "new",
        "reveal": "always"
      },
      "problemMatcher": ["$jshint"]
    }
  ]
}
