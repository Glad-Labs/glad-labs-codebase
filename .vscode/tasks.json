{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Co-founder Agent",
      "type": "shell",
      "command": "poetry",
      "args": [
        "run",
        "uvicorn",
        "main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/cofounder_agent"
      },
      "isBackground": true,
      "problemMatcher": ["$python"],
      "presentation": {
        "group": "services",
        "panel": "dedicated",
        "reveal": "always",
        "clear": false
      }
    },
    {
      "label": "Start Public Site",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/web/public-site"
      },
      "isBackground": true,
      "presentation": {
        "group": "services",
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Start Oversight Hub",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/web/oversight-hub"
      },
      "isBackground": true,
      "presentation": {
        "group": "services",
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Start All Services",
      "dependsOn": ["Start Co-founder Agent", "Start Public Site", "Start Oversight Hub"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "group": "services",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "type": "Live Preview",
      "workspacePath": "c:\\Users\\mattm\\glad-labs-website",
      "problemMatcher": [],
      "label": "Live Preview: Run Server"
    }
  ]
}
