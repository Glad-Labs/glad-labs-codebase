{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Strapi CMS",
      "type": "shell",
      "command": "npm run develop",
      "options": {
        "cwd": "${workspaceFolder}/cms/strapi-v5-backend"
      },
      "problemMatcher": [],
      "presentation": {
        "group": "services",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start Oversight Hub",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/web/oversight-hub"
      },
      "problemMatcher": [],
      "presentation": {
        "group": "services",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start Public Site",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/web/public-site"
      },
      "problemMatcher": [],
      "presentation": {
        "group": "services",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start Intervene Trigger",
      "type": "shell",
      "command": "python main.py",
      "options": {
        "cwd": "${workspaceFolder}/cloud-functions/intervene-trigger",
        "env": {
          "GCP_PROJECT": "your-gcp-project-id",
          "PUBSUB_TOPIC": "your-topic-name"
        }
      },
      "problemMatcher": [],
      "presentation": {
        "group": "services",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start Co-founder Agent",
      "type": "shell",
      "command": "uvicorn main:app --reload",
      "options": {
        "cwd": "${workspaceFolder}/src/cofounder_agent"
      },
      "problemMatcher": [],
      "presentation": {
        "group": "services",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start All Services",
      "dependsOn": [
        "Start Strapi CMS",
        "Start Oversight Hub",
        "Start Public Site",
        "Start Intervene Trigger",
        "Start Co-founder Agent"
      ],
      "problemMatcher": []
    }
  ]
}
