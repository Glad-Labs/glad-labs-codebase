{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "BE: Start Strapi CMS",
      "type": "shell",
      "command": "npm run develop",
      "options": {
        "cwd": "${workspaceFolder}/cms/strapi-backend"
      },
      "presentation": {
        "group": "startup",
        "panel": "new",
        "reveal": "always"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "BE: Start Python Agent Listener",
      "type": "shell",
      "command": "python orchestrator.py",
      "options": {
        "cwd": "${workspaceFolder}/agents/content-agent"
      },
      "presentation": {
        "group": "startup",
        "panel": "new",
        "reveal": "always"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "FE: Start Oversight Hub",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/web/oversight-hub"
      },
      "presentation": {
        "group": "startup",
        "panel": "new",
        "reveal": "always"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "FE: Start Public Site",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/web/public-site"
      },
      "presentation": {
        "group": "startup",
        "panel": "new",
        "reveal": "always"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}