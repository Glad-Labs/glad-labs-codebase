{
  "name": "glad-labs-monorepo",
  "version": "3.0.1",
  "private": true,
  "description": "Complete AI orchestration system with intelligent business management and autonomous agents",
  "license": "AGPL-3.0-or-later",
  "author": "Matthew M. Gladding (Glad Labs, LLC)",
  "workspaces": [
    "web/public-site",
    "web/oversight-hub"
  ],
  "scripts": {
    "//": "=== UTILITIES ===",
    "dev": "npm run setup:dev && concurrently \"npm run dev:cofounder\" \"npm run dev:frontend\"",
    "dev:all": "concurrently \"npm run dev:cofounder\" \"npm run dev:public\" \"npm run dev:oversight\"",
    "dev:backend": "npm run dev:cofounder",
    "dev:cofounder": "cd src/cofounder_agent && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000 --log-level info",
    "dev:frontend": "concurrently \"npm run dev:public\" \"npm run dev:oversight\"",
    "dev:oversight": "npm start --workspace=web/oversight-hub",
    "dev:public": "npm run dev --workspace=web/public-site",
    "install:all": "npm install && npm install --workspaces && npm run setup:python",
    "setup": "npm run install:all && npm run setup:env",
    "setup:dev": "npm run setup:env && npm run health:check",
    "setup:python": "pip install -r requirements.txt && pip install -r src/cofounder_agent/requirements.txt",
    "setup:env": "node scripts/select-env.js",
    "clean": "rimraf node_modules package-lock.json **/node_modules **/dist **/.next **/build .venv __pycache__ **/__pycache__ **/*.pyc",
    "clean:install": "npm run clean && npm run install:all",
    "build": "npm run build --workspaces --if-present",
    "build:frontend": "npm run build --workspaces=web/public-site --workspaces=web/oversight-hub --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:ci": "npm run test --workspaces --if-present -- --ci --coverage --watchAll=false",
    "test:python": "cd src/cofounder_agent && python -m pytest tests/ -v --tb=short",
    "test:python:smoke": "cd src/cofounder_agent && python -m pytest tests/test_e2e_fixed.py -v --tb=short",
    "test:python:coverage": "cd src/cofounder_agent && python -m pytest tests/ -v --cov --cov-report=html",
    "test:all": "npm run test:python && npm run test",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "npm run format:js && npm run format:python",
    "format:js": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\" \"!**/package-lock.json\" \"!**/node_modules/**\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\" \"!**/package-lock.json\" \"!**/node_modules/**\"",
    "format:python": "cd src/cofounder_agent && python -m black . && python -m isort .",
    "health:check": "echo 'Checking service health...' && node scripts/health-check.js",
    "env:select": "node scripts/select-env.js"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "baseline-browser-mapping": "^2.9.11",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "markdownlint-cli": "^0.42.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.0",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "svgo": "^2.8.0",
    "@svgr/webpack": "^6.5.1",
    "postcss": "^8.4.47",
    "undici": "^6.21.2",
    "esbuild": ">=0.24.4",
    "koa": ">=2.16.2",
    "nth-check": ">=2.1.1"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "psql": "^0.0.1",
    "react-refresh": "^0.14.0"
  }
}
