{
  "name": "glad-labs-monorepo",
  "version": "3.0.1",
  "private": true,
  "description": "Complete AI orchestration system with intelligent business management and autonomous agents",
  "license": "AGPL-3.0-or-later",
  "author": "Matthew M. Gladding (Glad Labs, LLC)",
  "workspaces": [
    "web/public-site",
    "web/oversight-hub",
    "src/cofounder_agent"
  ],
  "scripts": {
    "//": "=== TESTING ===",
    "dev": "npm run env:select && concurrently \"npm run dev:cofounder\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev:cofounder",
    "dev:cofounder": "python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000 --log-level info --reload-dir src/cofounder_agent",
    "dev:frontend": "concurrently \"npm run dev --workspace=web/public-site\" \"npm start --workspace=web/oversight-hub\"",
    "dev:oversight": "npm start --workspace=web/oversight-hub",
    "dev:public": "npm run dev --workspace=web/public-site",
    "build": "npm run build --workspaces --if-present",
    "clean": "rimraf node_modules package-lock.json **/node_modules **/dist **/.next **/build .venv __pycache__ **/__pycache__",
    "clean:install": "npm run clean && npm install && npm install --workspaces",
    "env:select": "node scripts/select-env.js",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\" \"!**/package-lock.json\" \"!**/node_modules/**\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\" \"!**/package-lock.json\" \"!**/node_modules/**\"",
    "install:all": "npm install && npm install --workspaces",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "setup": "npm run install:all && pip install -r requirements.txt && pip install -r src/cofounder_agent/requirements.txt",
    "test": "npm run test --workspaces --if-present",
    "test:ci": "npm run test --workspaces --if-present -- --ci --coverage --watchAll=false",
    "test:python": "cd src/cofounder_agent && python -m pytest tests/ -v",
    "test:python:smoke": "cd src/cofounder_agent && python -m pytest tests/test_e2e_fixed.py -v"
  },
  "devDependencies": {
    "baseline-browser-mapping": "^2.9.11",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "markdownlint-cli": "^0.42.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.0",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "svgo": "^2.8.0",
    "@svgr/webpack": "^6.5.1",
    "postcss": "^8.4.47",
    "undici": "^6.21.2",
    "esbuild": ">=0.24.4",
    "koa": ">=2.16.2",
    "nth-check": ">=2.1.1"
  },
  "dependencies": {
    "psql": "^0.0.1",
    "react-refresh": "^0.14.0"
  }
}