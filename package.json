{
  "name": "glad-labs-monorepo",
  "version": "3.0.0",
  "private": true,
  "description": "Complete AI Co-Founder system with intelligent business management, autonomous agents, voice interface, and comprehensive business intelligence",
  "license": "MIT",
  "author": "Matthew M. Gladding (Glad Labs, LLC)",
  "workspaces": [
    "web/public-site",
    "web/oversight-hub",
    "cms/strapi-main"
  ],
  "scripts": {
    "//": "=== DEVELOPMENT ===",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "concurrently \"npm run dev --workspace=src/cofounder_agent\" \"npm run develop --workspace=cms/strapi-main\"",
    "dev:cofounder": "npm run dev --workspace=src/cofounder_agent",
    "dev:frontend": "concurrently \"npm run dev --workspace=web/public-site\" \"npm start --workspace=web/oversight-hub\"",
    "dev:oversight": "npm start --workspace=web/oversight-hub",
    "dev:public": "npm run dev --workspace=web/public-site",
    "//": "=== BUILD ===",
    "build": "npm run build --workspaces --if-present",
    "//": "=== UTILITIES ===",
    "clean": "rimraf node_modules package-lock.json web/public-site/node_modules web/oversight-hub/node_modules cms/strapi-main/node_modules src/cofounder_agent/node_modules web/public-site/.next web/public-site/dist web/oversight-hub/build cms/strapi-main/build src/cofounder_agent/build .venv src/cofounder_agent/__pycache__",
    "clean:install": "npm run clean && npm install && npm install --workspaces",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\" \"!**/package-lock.json\" \"!**/node_modules/**\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\" \"!**/package-lock.json\" \"!**/node_modules/**\"",
    "install:all": "npm install && npm install --workspaces",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "setup": "npm run install:all && pip install -r requirements.txt && pip install -r src/cofounder_agent/requirements.txt",
    "//": "=== TESTING ===",
    "test": "npm run test --workspaces --if-present && npm run test:python",
    "test:ci": "npm run test --workspaces --if-present -- --ci --coverage --watchAll=false",
    "test:python": "cd src/cofounder_agent && python -m pytest tests/ -v",
    "test:python:smoke": "cd src/cofounder_agent && python -m pytest tests/test_e2e_fixed.py -v"
  },
  "devDependencies": {
    "@strapi/strapi": "^5.18.1",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "markdownlint-cli": "^0.42.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.0",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "svgo": "^2.8.0",
    "@svgr/webpack": "^6.5.1",
    "postcss": "^8.4.47",
    "undici": "^6.21.2",
    "esbuild": ">=0.24.4",
    "koa": ">=2.16.2",
    "nth-check": ">=2.1.1"
  },
  "dependencies": {
    "psql": "^0.0.1"
  }
}
