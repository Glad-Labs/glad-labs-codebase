{
  "name": "glad-labs-monorepo",
  "version": "3.0.0",
  "private": true,
  "description": "Complete AI Co-Founder system with intelligent business management, autonomous agents, voice interface, and comprehensive business intelligence",
  "license": "MIT",
  "author": "Matthew M. Gladding (Glad Labs, LLC)",
  "workspaces": [
    "web/public-site",
    "web/oversight-hub",
    "cms/strapi-v5-backend"
  ],
  "scripts": {
    "//": "--- DEVELOPMENT & BUILD ---",
    "dev": "npm-run-all --parallel dev:*",
    "dev:strapi": "npm run develop --workspace=cms/strapi-v5-backend",
    "dev:oversight": "npm start --workspace=web/oversight-hub",
    "dev:public": "npm run dev --workspace=web/public-site",
    "dev:cofounder": "python src/cofounder_agent/start_server.py",
    "build": "npm run build --workspaces --if-present",
    "start:all": "npm-run-all --parallel start:*",
    "start:strapi": "npm run start --workspace=cms/strapi-v5-backend",
    "start:public": "npm run start --workspace=web/public-site",
    "start:oversight": "npm run build --workspace=web/oversight-hub && npm run start --workspace=web/oversight-hub",
    "start:cofounder": "python src/cofounder_agent/main.py",
    "//": "--- INSTALLATION & MAINTENANCE ---",
    "setup:all": "npm run install:all && npm run setup:python",
    "install:all": "npm install && npm install --workspaces",
    "setup:python": "pip install -r requirements.txt && pip install -r src/cofounder_agent/requirements.txt",
    "clean": "rimraf node_modules package-lock.json **/node_modules **/dist **/.next **/build .venv __pycache__ **/__pycache__",
    "clean:install": "npm run clean && npm run install:all",
    "//": "--- TESTING ---",
    "test": "npm-run-all --parallel test:frontend test:python",
    "test:frontend": "npm test --workspaces --if-present",
    "test:python": "cd src/cofounder_agent/tests && python run_tests.py all",
    "test:python:smoke": "cd src/cofounder_agent/tests && python -m pytest test_e2e_fixed.py -v",
    "//": "--- CODE QUALITY ---",
    "lint": "npm run lint --workspaces --if-present && markdownlint *.md",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\" \"!**/package-lock.json\" \"!**/node_modules/**\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\" \"!**/package-lock.json\" \"!**/node_modules/**\"",
    "//": "--- UTILITIES ---",
    "services:check": "powershell -ExecutionPolicy Bypass -File ./scripts/check-services.ps1",
    "services:kill": "powershell -ExecutionPolicy Bypass -File ./scripts/kill-services.ps1",
    "services:restart": "npm run services:kill && npm run dev"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "markdownlint-cli": "^0.42.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.0",
    "rimraf": "^6.0.0",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "svgo": "^2.8.0",
    "@svgr/webpack": "^6.5.1",
    "postcss": "^8.4.47",
    "undici": "^6.21.2",
    "esbuild": ">=0.24.4",
    "koa": ">=2.16.2",
    "nth-check": ">=2.1.1"
  }
}
