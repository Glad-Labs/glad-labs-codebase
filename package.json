{
  "name": "glad-labs-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for the GLAD Labs project, containing all services and applications.",
  "license": "MIT",
  "author": "Matthew M. Gladding (Glad Labs, LLC)",
  "workspaces": [
    "agents/*",
    "cms/*",
    "cloud-functions/*",
    "web/*"
  ],
  "scripts": {
    "//": "--- CLEAN & INSTALL ---",
    "clean": "rimraf node_modules package-lock.json **/node_modules **/dist **/.next **/build .venv",
    "install:clean": "npm run clean && npm install",
    "setup:python": "python -m venv .venv && .\\.venv\\Scripts\\pip install -r requirements.txt",
    "//": "--- DEVELOPMENT ---",
    "dev": "npm-run-all --parallel dev:*",
    "dev:strapi": "npm run develop --workspace=strapi-v5-backend",
    "dev:oversight": "npm start --workspace=oversight-hub",
    "dev:public": "npm run dev --workspace=glad-labs-public-site",
    "dev:cofounder": "npm run start:cofounder",
    "//": "--- PRODUCTION BUILD ---",
    "build": "npm run build --workspaces --if-present",
    "//": "--- PRODUCTION START ---",
    "start": "npm-run-all --parallel start:strapi start:public",
    "start:strapi": "npm run start --workspace=strapi-v5-backend",
    "start:public": "npm run start --workspace=glad-labs-public-site",
    "start:cofounder": ".\\.venv\\Scripts\\python -m uvicorn src.cofounder_agent.main:app --reload --port 8000",
    "//": "--- QUALITY & TESTING ---",
    "test": "npm test --workspaces --if-present",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\" \"!**/package-lock.json\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "markdownlint-cli": "^0.32.2",
    "prettier": "^2.8.8",
    "wait-on": "^7.2.0"
  }
}
