{
  "name": "glad-labs-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for the GLAD Labs project, containing all services and applications.",
  "license": "MIT",
  "author": "Matthew M. Gladding (Glad Labs, LLC)",
  "workspaces": [
    "agents/*",
    "cms/*",
    "cloud-functions/*",
    "web/*"
  ],
  "scripts": {
    "//": "--- QUALITY & TESTING ---",
    "clean": "rimraf node_modules package-lock.json **/node_modules **/dist **/.next **/build .venv",
    "install:clean": "npm run clean && npm install",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "dev": "npm-run-all --parallel dev:*",
    "dev:strapi": "npm run develop --workspace=strapi-v5-backend",
    "dev:oversight": "npm start --workspace=oversight-hub",
    "dev:public": "npm run dev --workspace=glad-labs-public-site -- --port 3000",
    "dev:cofounder": "cd src; python -m uvicorn cofounder_agent.main:app --reload --port 8000",
    "build": "npm run build --workspaces --if-present",
    "start:all": "npm-run-all --parallel start:*",
    "start:strapi": "npm run start --workspace=strapi-v5-backend",
    "start:public": "npm run start --workspace=glad-labs-public-site",
    "start:cofounder": "cd src; python -m uvicorn cofounder_agent.main:app --port 8000",
    "test": "npm-run-all --parallel test:frontend test:python",
    "test:frontend": "npm test --workspaces --if-present",
    "test:python": ".venv\\Scripts\\python.exe -m pytest src/agents/ -v",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\" \"!**/package-lock.json\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "markdownlint-cli": "^0.32.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "wait-on": "^7.2.0"
  }
}
