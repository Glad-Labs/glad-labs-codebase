# ==================================
# .env.local - DEVELOPMENT ENVIRONMENT
# ==================================
# üî® FOR LOCAL DEVELOPMENT
# Connects to local backend on port 8000
# Branch: feature/* or dev ‚Üí Use these settings
# Debug mode enabled

# ==================================
# ENVIRONMENT & LOGGING
# ==================================
NODE_ENV=development
ENVIRONMENT=development
LOG_LEVEL=debug
DEBUG=true

# ==================================
# PORTS (managed by Vercel/Railway)
# ==================================
COFOUNDER_AGENT_PORT=8000
PUBLIC_SITE_PORT=3000
OVERSIGHT_HUB_PORT=3001
POSTGRES_PORT=5432

# ==================================
# DATABASE - PRODUCTION (RAILWAY)
# ==================================
# Production PostgreSQL on Railway
# Generate strong credentials: openssl rand -base64 32
DATABASE_URL=${{ secrets.DATABASE_URL_PRODUCTION }}
DATABASE_HOST=${{ secrets.DATABASE_HOST_PRODUCTION }}
DATABASE_PORT=5432
DATABASE_NAME=${{ secrets.DATABASE_NAME_PRODUCTION }}
DATABASE_USER=${{ secrets.DATABASE_USER_PRODUCTION }}
DATABASE_PASSWORD=${{ secrets.DATABASE_PASSWORD_PRODUCTION }}

# ==================================
# AI MODELS - PRODUCTION
# ==================================
# Production: Use premium models for quality
# Claude Opus preferred, fallback to GPT-4, then Gemini

# Option A: Anthropic Claude Opus (recommended)
ANTHROPIC_API_KEY=${{ secrets.ANTHROPIC_API_KEY }}

# Option B: OpenAI GPT-4 (fallback)
# OPENAI_API_KEY=${{ secrets.OPENAI_API_KEY }}

# Option C: Google Gemini (tertiary fallback)
# GOOGLE_API_KEY=${{ secrets.GOOGLE_API_KEY }}

# ==================================
# FRONTEND - DEVELOPMENT URLS
# ==================================
# Use local backend for development
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_COFOUNDER_AGENT_URL=http://localhost:8000
REACT_APP_API_URL=http://localhost:8000
REACT_APP_LOG_LEVEL=debug

# ==================================
# SECURITY - PRODUCTION
# ==================================
# ‚ö†Ô∏è CRITICAL: Use unique, secure secrets
# Generate: openssl rand -base64 32
JWT_SECRET=${{ secrets.JWT_SECRET_PRODUCTION }}

# CORS: Production domains only (strict)
ALLOWED_ORIGINS=https://gladlabs.io,https://www.gladlabs.io,https://admin.gladlabs.io,https://api.gladlabs.io

# ==================================
# RATE LIMITING - PRODUCTION
# ==================================
RATE_LIMIT_PER_MINUTE=300
API_TIMEOUT=45000
API_RETRY_ATTEMPTS=3

# ==================================
# REDIS CACHE - PRODUCTION
# ==================================
# Production: Must use Redis for distributed caching
REDIS_HOST=${{ secrets.REDIS_HOST_PRODUCTION }}
REDIS_PORT=6379
REDIS_PASSWORD=${{ secrets.REDIS_PASSWORD_PRODUCTION }}
REDIS_DB=0

# ==================================
# OBSERVABILITY - PRODUCTION
# ==================================
# Production: Full error tracking enabled
SENTRY_DSN=${{ secrets.SENTRY_DSN_PRODUCTION }}
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ==================================
# FEATURE FLAGS - PRODUCTION
# ==================================
ENABLE_DEBUG_LOGS=false
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
ENABLE_MCP_SERVER=true
ENABLE_MEMORY_SYSTEM=true

# ==================================
# OTHER
# ==================================
PEXELS_API_KEY=${{ secrets.PEXELS_API_KEY }}