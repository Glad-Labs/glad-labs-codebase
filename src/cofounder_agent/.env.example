# ==================================
# AI Co-Founder Agent - Environment Configuration
# ==================================
# Development: Copy this file to .env and fill in your values
# Production: Secrets come from GitHub via GitHub Actions
# Never commit real secrets to version control!

# ==================================
# Environment & Debug
# ==================================
NODE_ENV=development
LOG_LEVEL=debug
DEBUG=True

# ==================================
# Server Configuration
# ==================================
HOST=0.0.0.0
PORT=8000
RELOAD=True

# ==================================
# AI Model Provider (Choose ONE)
# ==================================
# OpenAI (GPT-4, GPT-3.5)
OPENAI_API_KEY=sk-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Anthropic (Claude 3)
ANTHROPIC_API_KEY=sk-ant-api03-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Google (Gemini)
GOOGLE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Ollama (Free Local Alternative)
USE_OLLAMA=False
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral

# ==================================
# Model Configuration
# ==================================
# Primary model for all agents
COFOUNDER_AGENT_MODEL=gpt-4

# Alternative models for specific tasks
CONTENT_AGENT_MODEL=gpt-4
FINANCIAL_AGENT_MODEL=gpt-4
MARKET_AGENT_MODEL=gpt-4
COMPLIANCE_AGENT_MODEL=gpt-4

# Model temperature (0 = deterministic, 1 = creative)
MODEL_TEMPERATURE=0.7

# ==================================
# Strapi CMS Integration
# ==================================
NEXT_PUBLIC_STRAPI_API_URL=http://localhost:1337
STRAPI_API_TOKEN=your-strapi-api-token-here

# ==================================
# Database Configuration
# ==================================
DATABASE_URL=sqlite:///./test.db
DATABASE_CLIENT=sqlite

# ==================================
# GCP/Google Cloud Configuration
# ==================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
PUBSUB_TOPIC=your-pubsub-topic
PUBSUB_SUBSCRIPTION=your-pubsub-subscription

# ==================================
# Memory System
# ==================================
ENABLE_MEMORY_SYSTEM=True
MEMORY_STORAGE_TYPE=filesystem
MEMORY_CLEANUP_DAYS=30

# ==================================
# MCP (Model Context Protocol) Integration
# ==================================
ENABLE_MCP_SERVER=True
MCP_SERVER_PORT=3000
MCP_TRANSPORT=stdio

# ==================================
# Voice Interface (if enabled)
# ==================================
ENABLE_VOICE_INTERFACE=False
SPEECH_RECOGNITION_PROVIDER=google
SPEECH_SYNTHESIS_PROVIDER=google

# ==================================
# External Integrations
# ==================================
SERPER_API_KEY=your-serper-api-key-here
NEWSLETTER_API_KEY=your-newsletter-api-key-here

# ==================================
# Logging & Monitoring
# ==================================
SENTRY_DSN=
ENABLE_REQUEST_LOGGING=True
ENABLE_PERFORMANCE_MONITORING=True

# ==================================
# Feature Flags
# ==================================
ENABLE_TASK_SCHEDULING=True
ENABLE_ASYNC_PROCESSING=True
ENABLE_WEBHOOK_NOTIFICATIONS=True
ENABLE_RATE_LIMITING=True

# ==================================
# Testing
# ==================================
TESTING=False
MOCK_EXTERNAL_APIS=False
