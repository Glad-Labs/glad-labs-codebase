{
  "kind": "collectionType",
  "collectionName": "tags",
  "info": {
    "singularName": "tag",
    "pluralName": "tags",
    "displayName": "Tag",
    "description": "Tags for fine-grained content categorization and SEO optimization."
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "Name": {
      "type": "string",
      "required": true,
      "unique": true,
      "description": "The tag name (e.g., 'AI Development', 'Game Design', 'Unity')"
    },
    "Slug": {
      "type": "uid",
      "targetField": "Name",
      "required": true,
      "description": "URL-friendly version of the tag name"
    },
    "Color": {
      "type": "string",
      "description": "Hex color code for UI display (e.g., '#FF6B35')"
    },
    "Description": {
      "type": "text",
      "description": "Brief description of what this tag represents"
    },
    "posts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::post.post",
      "mappedBy": "tags"
    }
  }
}
