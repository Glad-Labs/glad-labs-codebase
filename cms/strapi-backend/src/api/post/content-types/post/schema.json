{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Blog Post",
    "description": "Represents a single blog post, including all its content, metadata, and media. This is the central content type for the website.",
    "version": "1.1.0"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "Title": {
      "type": "string",
      "required": true,
      "description": "The main title of the blog post."
    },
    "Slug": {
      "type": "uid",
      "targetField": "Title",
      "required": true,
      "description": "The URL-friendly identifier for the post, generated from the title."
    },
    "BodyContent": {
      "type": "blocks",
      "required": true,
      "description": "The main content of the blog post, using Strapi's block editor."
    },
    "PostStatus": {
      "type": "enumeration",
      "enum": ["Draft", "Published", "Archived"],
      "default": "Draft",
      "required": true
    },
    "Keywords": {
      "type": "string",
      "description": "A comma-separated list of SEO keywords for the post."
    },
    "MetaDescription": {
      "type": "text",
      "maxLength": 160,
      "description": "A short summary for search engine results (max 160 characters)."
    },
    "FeaturedImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"],
      "description": "The primary image for the blog post."
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "posts"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "posts"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "posts"
    },
    "metrics": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::content-metric.content-metric",
      "mappedBy": "post"
    },
    "ReadingTime": {
      "type": "integer",
      "description": "Estimated reading time in minutes"
    },
    "Excerpt": {
      "type": "text",
      "maxLength": 300,
      "description": "Short excerpt or summary of the post"
    }
  }
}
