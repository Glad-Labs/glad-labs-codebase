# NPM configuration for production builds
# Optimized for Railway.app containerized environment

# Disable audit to speed up builds
audit=false

# Disable optional dependencies that might fail in containers
optional=false

# Increase verbosity slightly for debugging build issues
loglevel=warn

# Use exact versions from package-lock.json
save-exact=true

# Disable git-related warnings
git-tag-version=false

# Faster installs in CI environments
prefer-offline=false
no-progress=false

# Cache configuration - clean cache regularly
cache=/tmp/.npm-cache

# Reduce timeout issues in containers
fetch-timeout=60000
fetch-retries=3
fetch-retry-mintimeout=5000
fetch-retry-maxtimeout=30000

# Increase concurrency for faster builds
max-sockets=10
