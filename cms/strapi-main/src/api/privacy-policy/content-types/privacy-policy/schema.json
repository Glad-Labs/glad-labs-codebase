{
  "kind": "singleType",
  "collectionName": "privacy_policies",
  "info": {
    "singularName": "privacy-policy",
    "pluralName": "privacy-policies",
    "displayName": "Privacy Policy",
    "description": "Privacy policy content for Glad Labs"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "default": "Privacy Policy"
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "lastUpdated": {
      "type": "datetime",
      "required": true
    },
    "effectiveDate": {
      "type": "datetime",
      "required": true
    },
    "contactEmail": {
      "type": "email",
      "default": "privacy@gladlabs.com"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
