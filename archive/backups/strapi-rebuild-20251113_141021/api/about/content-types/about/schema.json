{
  "kind": "singleType",
  "collectionName": "about",
  "info": {
    "singularName": "about",
    "pluralName": "abouts",
    "displayName": "About Page",
    "description": "About page content for Glad Labs"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "default": "About Glad Labs"
    },
    "subtitle": {
      "type": "string"
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "mission": {
      "type": "richtext"
    },
    "vision": {
      "type": "richtext"
    },
    "values": {
      "type": "richtext"
    },
    "team": {
      "type": "component",
      "repeatable": true,
      "component": "team.team-member"
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
